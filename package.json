{
  "name": "diff-dir",
  "version": "0.1.0",
  "private": true,
  "description": "Folder diff viewer for macOS using Electron",
  "main": "dist/main/main/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:electron": "wait-on tcp:127.0.0.1:5173 file:dist/main/main/main.js file:dist/main/preload/preload.js file:dist/main/shared/ipc.js && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5173 electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "test": "vitest run",
    "test:e2e": "npm run build && playwright test -c playwright.config.ts",
    "test:e2e:run": "npm run build && cross-env RUN_E2E=1 playwright test -c playwright.config.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "dist:mac": "npm run build && electron-builder --mac dmg zip --publish never",
    "pack:mac": "npm run build && electron-builder --mac --dir --publish never"
  },
  "dependencies": {
    "diff": "^8.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.14",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vitest": "^4.0.18",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.ytahara.diffdir",
    "productName": "DiffDir",
    "directories": {
      "buildResources": "build-resources",
      "output": "dist-release"
    },
    "electronDist": "node_modules/electron/dist",
    "asar": true,
    "files": [
      "dist/main/**/*",
      "dist/renderer/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build-resources/icon.icns",
      "identity": null,
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  }
}
